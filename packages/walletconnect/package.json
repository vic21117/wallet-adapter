{
  "name": "@civic/solana-walletconnect-provider",
  "version": "1.0.0",
  "description": "Solana wallet-connect RPC methods",
  "main": "dist/index",
  "types": "dist/index",
  "author": "Kevin Colgan",
  "license": "MIT",
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.json",
    "prepublishOnly": "yarn run build",
    "test:unit": "STAGE=${STAGE:-dev} FORCE_COLOR=1 nyc --reporter=lcov ts-mocha --timeout 20000 --paths --exit -R mocha-circleci-reporter 'test/unit/**/*.ts'",
    "test": "yarn test:unit && yarn coverage",
    "coverage": "FORCE_COLOR=1 nyc report --reporter=text && nyc check-coverage"
  },
  "dependencies": {
    "@solana/web3.js": "^0.93.0",
    "@testing-library/user-event": "^7.1.2",
    "@types/node": "^14.14.31",
    "@types/ramda": "^0.27.38",
    "@types/uuid": "^8.3.0",
    "@walletconnect/client": "^2.0.0-alpha.35",
    "@walletconnect/qrcode-modal": "2.0.0-alpha.20",
    "@walletconnect/types": "^2.0.0-alpha.35",
    "@types/mocha": "^8.2.0",
    "eventemitter3": "^4.0.7",
    "mocha-circleci-reporter": "^0.0.3",
    "ramda": "^0.27.1",
    "ts-mocha": "^8.0.0",
    "tweetnacl": "^1.0.3",
    "typescript": "^4.2.3",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/plugin-transform-typescript": "^7.13.0",
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "husky": "4",
    "prettier": "^2.1.2",
    "rimraf": "~3.0.2",
    "ts-node": "^9.0.0",
    "sinon": "^9.2.3",
    "sinon-chai": "^3.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "nyc": "^15.1.0"
  }
}
