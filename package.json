{
    "private": true,
    "name": "@solana/wallet-adapter",
    "version": "0.2.0",
    "author": "Solana Maintainers <maintainers@solana.foundation>",
    "repository": "https://github.com/solana-labs/wallet-adapter",
    "license": "Apache-2.0",
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": ">= 10"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "lerna run build",
        "test": "lerna run test",
        "publish": "lerna publish from-package",
        "deploy": "yarn deploy:docs && yarn deploy:example",
        "deploy:docs": "yarn docs && gh-pages -d docs",
        "deploy:example": "gh-pages -e example -d packages/example/build",
        "docs": "rm -rf docs/* && typedoc --packages .",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint": "eslint . --ext .ts && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint:fix": "eslint . --ext .ts --fix && prettier --write '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "reset": "rm -rf {.,packages/*}/{node_modules,yarn.lock}"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^19.0.2",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@rollup/plugin-typescript": "^8.2.3",
        "@types/eslint": "^7.2.13",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/node": "^16.0.0",
        "@types/prettier": "^2.3.1",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.1",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "gh-pages": "^3.2.3",
        "lerna": "^4.0.0",
        "prettier": "^2.2.1",
        "rollup": "^2.54.0",
        "rollup-plugin-polyfill-node": "^0.7.0",
        "tslib": "^2.3.0",
        "typedoc": "^0.21.2",
        "typescript": "^4.3.5"
    }
}
